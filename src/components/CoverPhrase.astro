---
import Icon from "./parts/Icon.astro";

import CountdownTimer from './parts/CountdownTimer.astro';

const targetDate = "December 9, 2024 23:59:59"; // Fecha objetivo
---

<section class="container cover-phrase">
  <p class="cover-phrase__quote">
    <Icon icon="quotes-left" />
  </p>

  <p class="cover-phrase__phrase font-start-midnight">
    Mamá, ¡Me voy a casar!
  </p>

  <p class="cover-phrase__quote">
    <Icon icon="quotes-right" />
  </p>
</section>

<section class="container cover-phrase">
  <h5 class="cover-phrase__phrase">
    Cuenta atrás hasta la publicación de Viento y Verdad:
  </h5>

</section>
<CountdownTimer targetDate={targetDate} />


<style lang="scss">
  @import "../styles/variables/_color.scss";

  .cover-phrase {
    padding: 50px 0;

    .cover-phrase__quote {
      display: flex;
      justify-content: center;
      font-size: 2.5rem;
      color: $color-highlight-dark;
    }
    .cover-phrase__phrase {
      text-align: center;
      font-size: 5rem;
      font-weight: 500;
      line-height: 65px;
      color: $color-accent-dark;
      padding: 20px 20px;
      @media (max-width: 768px) {
        font-size: 4rem;
      }
    }
  }
</style>
